{% if post.tag_slug == "series" %}
  {% assign series = true %}
{% else %}
  {% assign series = false %}
{% endif %}

{% for tag_post in tags %}

    <article>
        {% if post.tag_slug == "series"  %}
            <data value="{{ tag_post.navigation.total_posts }}"><a href="{{ tag_post.url }}">{{ tag_post.navigation.total_posts }}</a></data>
            <h3><a href="{{ tag_post.tag_url }}">{{ tag_post.tag_title }}</a></h3>
            <h2><a href="{{ tag_post.url }}">{{ tag_post.title }}</a></h2>
        {% elsif post.tag_slug == "blog"  %}
            <data value="{{ blog_order }}"><a href="{{ tag_post.url }}">{{  tag_post.ordre }}</a></data>
            <h3><a href="{{ tag_post.url }}">{{ tag_post.month }}</a></h3>
            <h2><a href="{{ tag_post.url }}">{{ tag_post.title }}</a></h2>
        {% elsif post.tag_slug == "carnets"  %}
            <data value="{{ blog_order }}"><a href="{{ tag_post.url }}">{{  tag_post.ordre }}</a></data>
            <h2><a href="{{ tag_post.url }}">{{ tag_post.title }}</a></h2>
        {% elsif post.tag_slug == "book" %}
            <a href="{{ tag_post.url }}"><figure><img width="250" height="auto"
            src="{% if tag_post.thumb.url_small%}{{ tag_post.thumb.url_small }}{% else %}{{ tag_post.thumb.url }}{% endif %}"
            alt="{{ tag_post.thumb_legend }}" loading="lazy" decoding="async"
            srcset="{% if tag_post.thumb.url_small %}{{ tag_post.thumb.url_small }} 300w{% endif %}{% if tag_post.thumb.url_1024 %}, {{ tag_post.thumb.url_1024 }} 1024w{% endif %}"
            sizes="(min-width: 48rem) 300px, calc(100vw - 2rem)"
            /></figure></a>
        {% else %}
            <data value="{{ tag_post.ordre }}"><a href="{{ tag_post.url }}">{{ tag_post.ordre }}</a></data>
            <h3><a href="{{ tag_post.url }}">{{ tag_post.month }}</a></h3>
            <h2><a href="{{ tag_post.url }}">{{ tag_post.title }}</a></h2>
        {% endif %}
    </article>
    
{% endfor %}