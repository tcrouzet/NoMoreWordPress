{% for tag_post in post.posts %}

    <div class="resume-contenair"><a href="/{{ tag_post.url }}">
    
    {% if tag_post.thumb %}
        <img width="250" height="188" src="{{ tag_post.thumb.url_250 }}" class="resume-img" alt="{{ tag_post.thumb_legend }}" loading="lazy"
        decoding="async"
        srcset="{{ tag_post.thumb.url_250 }} 250w, {{tag_post.thumb.url_1024 }} 1024w, {{ tag_post.thumb.url }} 1600w"
        sizes="(max-width: 250px) 100vw, 250px" />
    {% else %}
        <img width="250" height="188" src="/v.png" style="background-color:cadetblue" />
    {% endif %}
    
    </a>
    <div class="resume-number"><a href="/{{ tag_post.url }}">{{ tag_post.order }}</a></div>
    {% if tag_post.type !=5 %}
        <div class="resume-serie"><a href="tag/{{ tag_post.navigation.maintag.url }}">{{ tag_post.navigation.maintag.title }}</a></div>
    {% endif %}
    <div class="resume-title"><a href="/{{ tag_post.url }}">
    {% if tag_post.type ==5 %}
        <b>{{ tag_post.title }}</b>
    {% else %}
        {{ tag_post.title }}
    {% endif %}
    </a>
    </div>
    </div>
    
{% endfor %}

<div class="load-more-url" next-url="{{ post.next_url }}" style="display: none;"></div>
