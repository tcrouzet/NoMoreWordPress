{% assign mail_path = blog.template  | append: '/newsletter.liquid' %}

<main id="content">

    <div class="menu-page">
        {% for menu in post.menu %}
            {% if forloop.index == 1 %}
                <h1 itemprop="headline" id="title">{{ menu.title }}</h1>
            {% else %}
                <a href="{{ menu.url }}">{{ menu.title }}</a>
            {% endif %}
        {% endfor %}
    </div>

    <article>
        <div class="front maxContainerWidth pageGutter infinite">
        {{ list }}
        </div>
    </article>

    {% include mail_path %}

</main>