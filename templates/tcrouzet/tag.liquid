<div id="content" role="main">

<div class="poster-title poster-title-center">
<div class="poster-menu">
    {% for menu in post.menu %}
        {% if forloop.index == 1 %}
            <h1 itemprop="headline" id="title">{{ menu.title }}</h1>
        {% else %}
            <a href="{{ menu.url }}">{{ menu.title }}</a>
        {% endif %}
    {% endfor %}
</div>
</div>

