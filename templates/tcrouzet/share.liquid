<div class="social">
    <a class="icon_com icon" href="javascript:void(0);" onclick="showComments('com{{ post.id }}')" title="Commenter">
        <span class="count">{{ post.comments }}</span>
    </a>
    <a class="icon_share icon" href="javascript:void(0);" onclick="copyText()" title="Partager"></a>
  {% if post.github != blank %}
        <a class="icon_download icon" href="{{ post.github }}" download title="Télécharger"></a>
  {% endif %}
</div>
<div class="comments" id="com{{ post.id }}" data-post-url="{{ post.url }}" data-post-title="{{ post.title }}" data-post-date="{{ post.pub_date_str }}"></div>